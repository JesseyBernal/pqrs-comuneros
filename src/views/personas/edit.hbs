<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO PQRSD</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id_pqrsd}}" method="post">
                    <div class="input-group mt-2">
                        <label for="" class="input-group-text">Radicado</label>
                        <input class="form-control" type="text" name="id_pqrsd" id="id_pqrsd" placeholder="# Radicado" value="{{persona.id_pqrsd}}" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_usuario" class="input-group-text">Usuario</label>
                        <input class="form-control" type="text" name="id_usuario" id="id_usuario" placeholder="Seleccionar usuario" value="{{persona.id_usuario}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_categoria" class="input-group-text">Categoria</label>
                        <!--<input class="form-control" type="text" name="id_categoria" id="id_categoria" placeholder="Seleccionar categoria" required>-->
                        <select class="form-select" aria-label="Default select example"  name="id_categoria" required>
                            <option selected hidden value="{{persona.id_categoria}}">{{persona.nombre_categoria}}</option>
                            {{#each seleccionCategoria}}
                            <option value="{{id_categoria}}">{{nombre_categoria}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group mt-2">
                        <label for="id_estado" class="input-group-text">Estado</label>
                        <!--<input class="form-control" type="text" name="id_estado" id="id_estado" placeholder="Seleccionar estado" required>-->
                        <select class="form-select" aria-label="Default select example"  name="id_estado" required>
                            <option selected hidden value="{{persona.id_estado}}">{{persona.nombre_estado}}</option>
                            {{#each seleccionEstado}}
                            <option value="{{id_estado}}">{{nombre_estado}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group mt-2">
                        <label for="fecha" class="input-group-text">Fecha</label>
                        <input class="form-control" type="date" name="fecha" id="fecha"  value="{{persona.fecha}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="asunto" class="input-group-text">Asunto</label>
                        <input class="form-control" type="text" name="asunto" id="asunto" placeholder="Contendio del pqrsd" value="{{persona.asunto}}" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar PQRSD</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

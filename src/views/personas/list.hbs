<div class="container">
  <div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de PQRSD</h3>
    {{#if personas}}      
        <table class="table text-center">
          <thead>
            <tr class="table-dark">
              <td scope="col" class="col-2">Radicado</td>
              <td scope="col">Nombre</td>
              <td scope="col">Categoria</td>
              <td scope="col">Estado</td>
              <td scope="col">Fecha</td>
              <td scope="col">Asunto</td>
              <td scope="col">Acciones</td>
            </tr>
          </thead>
          <tbody>
            {{#each personas}}
              <tr>
                <td>{{id_pqrsd}}</td>
                <td>{{nombre_usuario}}</td>
                <td>{{nombre_categoria}}</td>
                <td>{{nombre_estado}}</td>
                <td>{{fecha}}</td>
                <td>{{asunto}}</td>
                <td>
                  <div class="btn-group">
                    <a href="/edit/{{id_pqrsd}}" class="btn btn-warning p-2">
                    <i class="fa-solid fa-pencil"></i></a>
                    <a href="/delete/{{id_pqrsd}}" class="btn btn-danger p-2">
                    <i class="fa-solid fa-trash"></i></a>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr class="table-dark">
              <td colspan="7">REGISTRO DE PQRSD</td>
            </tr>
          </tfoot>
        </table>
    </div>
    {{else}}
      <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
          <h3>Debes crear un pqrsd</h3>
        </div>
        <div class="card-body">
          <p>Presiona este boton para que puedas registrar a un pqrsd en la
            aplicacion</p>
          <a href="/add" class="btn btn-primary">Ir a crear</a>
        </div>   
        </div>   
    {{/if}}
  
</div>
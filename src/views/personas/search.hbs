<div class="container">
  <div class="row">
    <div class="card text-center mt-4 p-0">
      <div class="card-header">
        <h3 class="text-center  text-uppercase p-2">Lista de PQRSD</h3>
      </div>      
      <div class="card-body">
        <table class="table text-center align-middle table-striped rounded-3 overflow-hidden">
          <thead>
            <tr class="table-dark">
              <td scope="col">Radicado</td>
              <td scope="col">Categoria</td>
              <td scope="col">Estado</td>              
              <td scope="col">Asunto</td>
              <td scope="col">Fecha</td>
              <td scope="col">Registrado</td>              
              <td scope="col">Acciones</td>
            </tr>
          </thead>
          <tbody>
            
            {{#each personas}}
              <tr>
                <td>{{id_pqrsd}}</td>            
                <td>{{nombre_categoria}}</td>
                <td>{{nombre_estado}}</td>                
                <td>{{asunto}}</td>
                <td>{{fecha}}</td>
                <td>{{nombre_administrador}}</td>                
                <td>
                  <div class="btn-group">
                    <a href="/edit/{{id_pqrsd}}" class="btn btn-warning p-2">
                    <i class="fa-solid fa-pencil"></i></a>
                    <a href="/delete/{{id_pqrsd}}" class="btn btn-danger p-2">
                    <i class="fa-solid fa-trash"></i></a>
                  </div>
                </td>
              </tr>
            {{/each}}            
          </tbody>
          <tfoot>
            <tr class="table-dark">
              <td colspan="7">LISTA DE PQRSD</td>
            </tr>
          </tfoot>          
          <small class="form-text text-muted" >Cantidad de PQRSD pendientes: {{contarPendiente.pendiente}} Cantidad de PQRSD en espera: {{contarEspera.espera}}</small>          
        </table>     
      </div>
    </div>
           
    </div> 
</div>